.container.Absolute-Center.is-Responsive
  .row
    .col-md-4
    .col-md-4
      .panel.panel-success
        .panel-heading
          .panel-title
            %h4 Log In
        .panel-body
          = simple_form_for(resource, as: resource_name, url: session_path(resource_name), class: 'form-horizontal') do |f| 
            .form-inputs
              = f.input :email, required: false, autofocus: true
              = f.input :password, required: false 
              = f.input :remember_me, as: :boolean if devise_mapping.rememberable? 

            .form-actions
              = f.button :submit, "Log in" 
        .panel-footer
          = render "devise/shared/links" 
    .col-md-4