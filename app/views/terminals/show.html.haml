= stylesheet_link_tag 'terminals'
-if flash[:notice].present?
  =flash[:notice]
%h1 terminal details
%p= @terminal.name
%p= @terminal.landline
%p
  %strong Image:
  = image_tag @terminal.logo.thumb.url
%table
  %tbody
    %tr
      %th Id
      %th Name
      %th price
      %th veg
      %th Image
    - @menu_items.each do |menuitem|
      %tr  
      %td= menuitem.id
      %td= menuitem.name
      %td= menuitem.price
      %td= menuitem.veg
      %td= image_tag(menuitem.image.url(:medium))
